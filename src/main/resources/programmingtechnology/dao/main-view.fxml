<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="319.0" prefWidth="457.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="programmingtechnology.dao.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ComboBox fx:id="sources" prefHeight="25.0" prefWidth="148.0" />
   <HBox prefHeight="231.0" prefWidth="417.0">
      <children>
         <TableView fx:id="tableTasks" prefHeight="230.0" prefWidth="306.0">
           <columns>
             <TableColumn prefWidth="75.0" text="C1" />
             <TableColumn prefWidth="75.0" text="C2" />
           </columns>
         </TableView>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Задача" />
               <TextField fx:id="nameValue" />
               <Label text="Время" />
               <TextField fx:id="timeValue" />
               <Button fx:id="addTask" mnemonicParsing="false" prefHeight="25.0" prefWidth="106.0" style="-fx-background-color: #249144;" text="Добавить" textFill="WHITE">
                  <VBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </VBox.margin>
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </Button>
            </children>
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="deleteRowTableTasks" mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #D92424;" text="Удалить" textFill="WHITE">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
            <font>
               <Font name="Verdana" size="12.0" />
            </font>
         </Button>
      </children>
   </HBox>
</VBox>
